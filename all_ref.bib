@InProceedings{tarnowski2019isometry,
  title = 	 {Dynamical Isometry is Achieved in Residual Networks in a Universal Way for any Activation Function},
  author =       {Tarnowski, Wojciech and Warcho\l, Piotr and Jastrz\c{e}bski, Stanis{\l}aw and Tabor, Jacek and Nowak, Maciej},
